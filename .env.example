# ==========================================
# CORE CONFIGURATION
# ==========================================
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Multi-Tier Model Configuration
# - Architect (Opus): Complex planning, orchestration
# - Workers (Sonnet): Implementation, general tasks
# - Chat (Sonnet): Conversation (prioritizes clarity)
# - Intent (Haiku): Intent parsing
DEFAULT_MODEL=claude-opus-4-6          # Architect
SUBAGENT_MODEL=claude-sonnet-4-5       # Workers
CHAT_MODEL=claude-sonnet-4-5           # Chat (use Sonnet for quality)
INTENT_MODEL=claude-haiku-4-5          # Intent parsing

# Local Model (Optional - for CPU inference)
# SmolLM2 is optimized for CPU, much faster than larger models
# Options: SmolLM2-1.7B-Instruct (recommended), SmolLM2-360M-Instruct (ultra-fast), Phi-3-mini
LOCAL_MODEL_ENABLED=false
LOCAL_MODEL_NAME=HuggingFaceTB/SmolLM2-1.7B-Instruct
LOCAL_MODEL_ENDPOINT=                  # e.g., http://localhost:8000
LOCAL_MODEL_FOR=trivial,simple         # Comma-separated: trivial, simple, chat, intent

# Agent Settings
MAX_ITERATIONS=50
THINKING_BUDGET=5000
AUTO_EXECUTE=true
SELF_BUILD_MODE=true

# ==========================================
# BRAIN/MEMORY
# ==========================================
VECTOR_DB_PATH=./data/chroma
CORE_BRAIN_PATH=./data/core_brain
DIGITAL_CLONE_BRAIN_PATH=./data/digital_clone_brain
MEMORY_PATH=./data/memory

# ==========================================
# GIT INTEGRATION
# ==========================================
AUTO_COMMIT=true
GIT_USER_NAME=Autonomous Agent
GIT_USER_EMAIL=agent@autonomous.ai

# ==========================================
# MONITORING & NOTIFICATIONS
# ==========================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Web Dashboard
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=18789

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=INFO
LOG_FILE=./data/logs/agent.log

# ==========================================
# SECURITY
# ==========================================
ENCRYPTION_KEY=
